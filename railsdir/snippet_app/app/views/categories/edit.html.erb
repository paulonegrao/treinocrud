<h2>Edit Category</h2>

<% if @category.errors.any? %>
  <div class="alert alert-warning">
    <p>There were errors in your submissiontextile:</p>
    <p><%= @category.errors.full_messages.join(", ") %></p>
<% end %>
<%= form_for @category do |f| %>
  <div class="form-group">
    <%= f.label :name, "Category Name" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="panel panel-default">
      <%= f.button "<span class='glyphicon glyphicon-ok'></span>".html_safe, type: "submit", class: "btn btn-success padded" %>

      <span class="padded">Submit your new Category when you're ready.</span>
  </div>
<% end %>
